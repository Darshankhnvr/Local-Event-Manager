generator client {
  provider = "prisma-client-js"
  output   = "../app/generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id            String         @id @default(cuid())
  name          String
  email         String         @unique
  createdAt     DateTime       @default(now())
  events        Event[]        @relation("HostedEvents")
  registrations Registration[]
}

model Event {
  id            String         @id @default(cuid())
  title         String
  description   String
  date          DateTime
  location      String
  createdAt     DateTime       @default(now())
  organizer     User           @relation("HostedEvents", fields: [organizerId], references: [id])
  organizerId   String
  registrations Registration[]
}

model Registration {
  id        String   @id @default(cuid())
  user      User     @relation(fields: [userId], references: [id])
  userId    String
  event     Event    @relation(fields: [eventId], references: [id])
  eventId   String
  createdAt DateTime @default(now())
}
